<Window x:Class="RestaurantApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantApp"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowState="Maximized"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="15">
                            <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.6*"/>
            <RowDefinition Height="0.4*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.4*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.ColumnSpan="5" Background="Yellow" Content="Foodat" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="45"/>
        <Button x:Name="ButtonSearch" FontFamily="Segoe MDL2 Assets" FontSize="45" Content="&#xE721;"  Background="LightGray" Grid.Row="2" Grid.Column="1" Click="ButtonSearch_Click" Margin="10" />
        <Button x:Name="ButtonLikes" Content="❤️" FontSize="45" Background="LightGray" Grid.Row="2" Click="ButtonLikes_Click" Margin="10"/>
        <Button x:Name="ButtonTopThree" Content="🏆" FontSize="45" Grid.Row="2" Grid.Column="2" Background="LightGray" Margin="10"/>
        <Button x:Name="ButtonComments" FontFamily="Segoe MDL2 Assets" FontSize="45" Content="&#xE8BD;" Background="LightGray" Grid.Row="2" Grid.Column="5" Margin="10" Click="ButtonComments_Click"/>
        <Button x:Name="ButtonExit" FontSize="45" Content="✖️" Click="CloseButton_Click" Background="LightGray"  Grid.Row="2" Grid.Column="3" Margin="10"/>
    </Grid>
</Window>