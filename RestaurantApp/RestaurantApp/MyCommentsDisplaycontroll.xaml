<UserControl x:Class="RestaurantApp.MyCommentsDisplaycontroll"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RestaurantApp"
             mc:Ignorable="d"
             Background="AliceBlue"
             BorderThickness="5"
             BorderBrush="Black"
             Height="255" Width="260">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2.5*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="LightGray" Grid.Row="2"/>
        <Border Background="LightGray" Grid.Row="0"/>
        <Label x:Name="MyCommentsDisplayControllLabelName" Content="Name" Grid.Row="0" HorizontalAlignment="Center" FontSize="25" VerticalAlignment="Center"/>
        <TextBlock x:Name="MyCommentsTextBlock" Grid.Column="1" Grid.Row="1" Margin="5" TextWrapping="Wrap"/>
        <Button Content="Löschen" x:Name="DeleteCommentButton" Grid.Row="2" HorizontalAlignment="Center" Width="200" Margin="10" FontSize="15" Click="WriteCommentButtonDelete_Click" Height="25"/>
        
    </Grid>
</UserControl>
