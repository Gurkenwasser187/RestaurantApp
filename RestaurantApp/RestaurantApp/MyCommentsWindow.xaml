<Window x:Class="RestaurantApp.MyCommentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantApp"
        mc:Ignorable="d"
        WindowStyle ="None"
        WindowState="Maximized"
        Title="MyCommentsWindow" Height="450" Width="800">
    <Grid>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2.5*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" Grid.ColumnSpan="3" Background="Yellow"/>
        <ListBox x:Name="ListBoxComments" Margin="10" Grid.Row="2" Grid.Column="1"/>
        <Button x:Name="CommentsBackToMainWindow" Content="🏠" FontSize="20" Background="Transparent" BorderThickness="0" Margin="5" Click="CommentsBackToMainWindow_Click"/>

        

    </Grid>
</Window>
