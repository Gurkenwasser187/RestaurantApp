<UserControl x:Class="RestaurantApp.RestaurantDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RestaurantApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label x:Name="LabelName" Content="Name" FontSize="30" Grid.Row="1" HorizontalAlignment="Center"/>
        <Label x:Name="LabelArt" Content="Art" FontSize="15" Grid.Row="2" VerticalAlignment="Center"/>
        <Label x:Name="LabelOrt" Content="Ort" FontSize="15" Grid.Row="3" VerticalAlignment="Center"/>
        <Label x:Name="LabelBewertungen" Content="Bewertungen" FontSize="15" Grid.Row="4" VerticalAlignment="Center"/>
        <Button x:Name="ButtonLike" Content="Liken" FontSize="15" Grid.Row="5"/>
        <Label Content="Link" FontSize="15" Grid.Row="6" VerticalAlignment="Center"/>

    </Grid>
               
    
    
    
</UserControl>
