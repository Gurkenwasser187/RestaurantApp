<UserControl x:Class="RestaurantApp.RestaurantDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RestaurantApp"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="White" Width="800">
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="LightGray" Grid.Row="1"/>
        <Label x:Name="LabelName" Content="Name" FontSize="30" Grid.Row="1" HorizontalAlignment="Center"/>
        <Label x:Name="LabelTypeOfFood" Content="Art:" FontSize="15" Grid.Row="2" VerticalAlignment="Center"/>
        <Label x:Name="LabelLocation" Content="Ort:" FontSize="15" Grid.Row="3" VerticalAlignment="Center"/>
        <Label x:Name="LabelRating" Content="Bewertungen:" FontSize="15" Grid.Row="4" VerticalAlignment="Center"/>
        <Button x:Name="ButtonLike" Content="👍" FontSize="15" Grid.Row="5" HorizontalAlignment="Left" Background="Transparent" BorderThickness="0px" Height="26" VerticalAlignment="Bottom" />
        <Label x:Name="LabelLink" Content="Link" FontSize="15" Grid.Row="6" VerticalAlignment="Center"/>
        <Button x:Name="ButtonComment" Content="💭" Grid.Row="8" Background="Transparent" BorderThickness="0px" HorizontalAlignment="Left" VerticalAlignment="Center"/>

    </Grid>
               
    
    
    
</UserControl>
