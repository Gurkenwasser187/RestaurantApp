<Window x:Class="RestaurantApp.WindowWriteComment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestaurantApp"
        mc:Ignorable="d"
        Title="WindowWriteComment" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="2" Background="LightGray"/>
        <Button x:Name="ButtonPost" Content="Ok" Grid.Row="2" Margin="10" HorizontalAlignment="Right" Width="100" Height="50"/>
        <Button x:Name="ButtonCancel" Content="Abbrechen" Grid.Row="2" Margin="10" HorizontalAlignment="Left" Width="100" Height="50" Click="ButtonCancel_Click"/>
       


    </Grid>
</Window>
